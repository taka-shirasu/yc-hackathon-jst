{
  "name": "yc-hackathon-asr-app",
  "version": "1.0.0",
  "description": "Electron app with dual ASR and GPT-4o-mini curation",
  "main": "main.js",
  "scripts": {
    "kill-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "kill-port-8000": "lsof -ti:8000 | xargs kill -9 2>/dev/null || true",
    "dev": "npm run kill-port && npm run kill-port-8000 && concurrently \"npm run dev:react\" \"npm run dev:asr\"",
    "dev:asr": "node asr-server.js",
    "dev:react": "react-scripts start",
    "build": "react-scripts build",
    "start": "react-scripts start"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.20.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "websocket": "^1.0.34",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.4.18",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yc-hackathon.asr-app",
    "productName": "ASR Curation App",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
